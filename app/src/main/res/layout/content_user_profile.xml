<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="70dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Check_user"
    tools:showIn="@layout/activity_check_user">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/theimages"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <GridView
                android:id="@+id/main_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="3dp"
                android:verticalSpacing="3dp"
                android:numColumns="3"
                android:stretchMode="columnWidth" />


        </LinearLayout>


        <LinearLayout android:id="@+id/thechat"

            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            xmlns:android="http://schemas.android.com/apk/res/android">


            <LinearLayout
                android:id="@+id/mesejidisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>



        <LinearLayout android:id="@+id/theinfo"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Jina"
                    android:textColor="@color/black"
                    android:textAppearance="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/jina"
                    android:text="Andrew Mashamba"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Umri"
                    android:textColor="@color/black"
                    android:textAppearance="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/umri"
                    android:text="27"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Namba Ya Simu"
                    android:textColor="@color/black"
                    android:textAppearance="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nambax"
                    android:text="0754244888"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Anapo Ishi"
                    android:textColor="@color/black"
                    android:textAppearance="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/eneox"
                    android:text="Mbagala, Dar es salaam"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Anatafuta"
                    android:textColor="@color/black"
                    android:textAppearance="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/maelezoz"
                    android:text=""
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

</androidx.core.widget.NestedScrollView>