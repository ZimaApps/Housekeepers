<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/theclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_gravity="end"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER EMAIL TO RECEIVE CV"
        android:id="@+id/text_dialog"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:textColor="@color/primary_text_default_material_light"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />



        <EditText
            android:visibility="gone"
            android:id="@+id/usernamex"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Your Full Name"
            android:inputType="text" />




        <EditText
            android:id="@+id/emailc"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />


    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Terms and Conditions"
        android:textColor="@color/primary_text_default_material_light" />


    <TextView
        android:layout_below="@+id/text_dialog"
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="No user of this app, Housekeeper or Employer either male or female, should be subjected verbally or
physically to unsolicited and unwelcomed sexual overtures or conduct. Similarly, inappropriate
displays of affection or sexually related conduct, even if welcome, are inappropriate in this network and
will not be tolerated...
"
        android:textColor="@color/tertiary_text_material_light"
        android:background="@color/white"
        android:gravity="left"/>
    <TextView
        android:layout_marginTop="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More >>"
        android:textColor="@color/tertiary_text_material_light"
        android:layout_gravity="end"/>



    <TextView
        android:layout_marginBottom="-20dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By tapping GET CV, You agree to our terms and conditions. Please, Take 5 Secs to listen to a word from our Sponsors"
        android:textColor="@color/tertiary_text_material_light"
        android:layout_gravity="left"/>

    <Button
        android:id="@+id/gobutton"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimaryDark"
        android:text="GET CV"
        android:textColor="#ffffffff"

        android:textStyle="bold" />


</LinearLayout>