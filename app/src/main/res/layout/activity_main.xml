<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">



        <RelativeLayout android:id="@+id/two_line_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minHeight="45dp"
            android:layout_margin="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:fresco="http://schemas.android.com/apk/res-auto">



            <ImageView
                android:id="@+id/logox"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/housekeeperslogo"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/logox"
                android:layout_toRightOf="@+id/logox"
                android:layout_marginLeft="8dp"
                android:text="HouseKeepers"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@+id/ingiax"
                    android:layout_toLeftOf="@+id/ingiax"
                    android:layout_marginRight="16dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:onClick="searchpeople"
                    app:srcCompat="@drawable/ic_search_black_24dp"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ingiax"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/jiungex"
                android:layout_toLeftOf="@+id/jiungex"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_account_circle_black_24dp"/>



                <Button
                    android:visibility="gone"
                    android:id="@+id/jiungex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:layout_toStartOf="@+id/searchx"
                    android:layout_toLeftOf="@+id/searchx"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"


                    />


            <ImageView
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_mail_black_24dp"/>

            </LinearLayout>


        </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>





        <ProgressBar

        android:id="@+id/progressBar1xxc"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@+id/fullscreen_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="339dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />





        <LinearLayout
            android:layout_marginTop="56dp"
            android:layout_marginBottom="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:orientation="vertical"
            android:gravity="center">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/matokeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorPrimary"
                android:text="No results, Please, try something else.."/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fooButonX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"

                android:layout_gravity="center_horizontal"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:text="BACK"
                />
        </LinearLayout>



            <LinearLayout

                android:id="@+id/matokeox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/xxx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:text="Loading..Please wait.."/>


            </LinearLayout>




            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">









                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/myRecycler"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>





                </LinearLayout>


            </ScrollView>


    </LinearLayout>





    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4482019772887748/8285018008">
    </com.google.android.gms.ads.AdView>





</androidx.constraintlayout.widget.ConstraintLayout>